{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .small-banner-{{ section.id }} {
    background-color: {{ section.settings.background_color }};
    {%- if section.settings.background_image != blank -%}
      background-image: url({{ section.settings.background_image | image_url: width: 2000 }});
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    {%- endif -%}
    color: {{ section.settings.text_color }};
    position: relative;
  }
  
  {%- if section.settings.background_overlay_opacity > 0 -%}
  .small-banner-{{ section.id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: {{ section.settings.background_overlay_opacity | divided_by: 100.0 }};
    z-index: 1;
  }
  {%- endif -%}

  .small-banner-content-wrapper {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 1.5rem;
    text-align: center;
  }

  /* Desktop Layout */
  @media screen and (min-width: 990px) {
    .small-banner-content-wrapper {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
      gap: 2rem;
    }

    .small-banner-text-content {
      flex: 1;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: center;
    }
    
    .small-banner-image-container {
        flex-shrink: 0;
    }
    
    .small-banner-button-container {
        flex-shrink: 0;
    }
  }

  .small-banner-image {
    max-width: 100%;
    height: auto;
    display: block;
  }

  .small-banner-{{ section.id }} .small-banner-header {
    margin: 0;
    line-height: 1.2;
    color: {{ section.settings.text_color }};
  }

  .small-banner-{{ section.id }} .small-banner-subheader {
    margin: 0.5rem 0 0;
    line-height: 1.4;
    color: {{ section.settings.text_color }};
    opacity: 0.9;
  }
  
  .small-banner-{{ section.id }} .small-banner-subheader p {
    margin: 0;
  }

  .small-banner-{{ section.id }} .small-banner-btn {
    display: inline-block;
    padding: 10px 20px;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    border-radius: 4px;
    font-weight: 600;
    transition: opacity 0.3s ease;
    border: 1px solid {{ section.settings.button_border_color }};
    font-size: {{ section.settings.button_font_size }}px;
  }

  .small-banner-{{ section.id }} .small-banner-btn:hover {
    opacity: 0.8;
  }
{%- endstyle -%}

<div class="small-banner-{{ section.id }} section-{{ section.id }}-padding">
  <div class="{{ section.settings.container }}">
    <div class="small-banner-content-wrapper">
      
      {%- if section.settings.banner_image != blank -%}
        <div class="small-banner-image-container" style="width: {{ section.settings.image_width }}px; max-width: 100%;">
          {%- assign image_width_2x = section.settings.image_width | times: 2 -%}
          {{ section.settings.banner_image | image_url: width: image_width_2x | image_tag:
            loading: 'lazy',
            class: 'small-banner-image',
            width: section.settings.image_width,
            height: 'auto'
          }}
        </div>
      {%- endif -%}

      <div class="small-banner-text-content">
        {%- if section.settings.header_text != blank -%}
          <h2 class="small-banner-header {{ section.settings.header_size }}">
            {{ section.settings.header_text }}
          </h2>
        {%- endif -%}
        
        {%- if section.settings.subheader_text != blank -%}
          <div class="small-banner-subheader {{ section.settings.subheader_size }}">
            {{ section.settings.subheader_text }}
          </div>
        {%- endif -%}
      </div>

      {%- if section.settings.button_text != blank -%}
        <div class="small-banner-button-container">
          <a href="{{ section.settings.button_link }}" class="small-banner-btn">
            {{ section.settings.button_text }}
          </a>
        </div>
      {%- endif -%}

    </div>
  </div>
</div>

{% schema %}
