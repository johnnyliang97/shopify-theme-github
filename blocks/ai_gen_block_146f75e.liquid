<product-search-{{ ai_gen_id }}
  class="ai-search-container-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <form class="ai-search-form-{{ ai_gen_id }}" action="{{ routes.search_url }}" method="get" role="search">
    <input
      type="search"
      name="q"
      class="ai-search-input-{{ ai_gen_id }}"
      placeholder="{{ block.settings.placeholder_text }}"
      autocomplete="off"
      autocorrect="off"
      autocapitalize="off"
      spellcheck="false"
      aria-label="Search products"
    >
    <button
      type="submit"
      class="ai-search-button-{{ ai_gen_id }}"
      aria-label="Search"
    >
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
    </button>
    <div class="ai-search-results-{{ ai_gen_id }}">
      <div class="ai-search-loading-{{ ai_gen_id }}" style="display: none;">Searching...</div>
      <div class="ai-search-no-results-{{ ai_gen_id }}" style="display: none;">No products found</div>
    </div>
  </form>
</product-search-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductSearch{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.searchTimeout = null;
        this.cache = new Map();}

      connectedCallback() {
        this.form = this.querySelector('.ai-search-form-{{ ai_gen_id }}');
        this.input = this.querySelector('.ai-search-input-{{ ai_gen_id }}');
        this.results = this.querySelector('.ai-search-results-{{ ai_gen_id }}');
        this.loading = this.querySelector('.ai-search-loading-{{ ai_gen_id }}');
        this.noResults = this.querySelector('.ai-search-no-results-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.input.addEventListener('input', this.handleInput.bind(this));
        this.input.addEventListener('focus', this.handleFocus.bind(this));
        this.input.addEventListener('keydown', this.handleKeydown.bind(this));document.addEventListener('click', (event) => {
          if (!this.contains(event.target)) {
            this.hideResults();
          }
        });

        window.addEventListener('resize', () => {
          if (this.results.classList.contains('active')) {
            this.positionResults();
          }
        });

        this.form.addEventListener('submit', (event) => {
          if (!this.input.value.trim()) {
            event.preventDefault();
          }
        });
      }

      handleInput(event) {
        const query = event.target.value.trim();
        
        clearTimeout(this.searchTimeout);
        
        if (query.length < 2) {
          this.hideResults();
          return;
        }

        this.searchTimeout = setTimeout(() => {
          this.performSearch(query);
        }, 300);
      }

      handleFocus() {
        const query = this.input.value.trim();
        if (query.length >= 2) {
          this.performSearch(query);
        }
      }

      handleKeydown(event) {
        if (event.key === 'Escape') {
          this.hideResults();
          this.input.blur();
        }
      }

      async performSearch(query) {
        if (this.cache.has(query)) {
          this.displayResults(this.cache.get(query));
          return;
        }

        this.showLoading();

        try {
          const response = await fetch(`${window.routes.predictive_search_url}?q=${encodeURIComponent(query)}&resources[type]=product&resources[limit]=8`, {
            method: 'GET',
            headers: {
              'Content-Type': 'application/json',
            },
          });

          if (!response.ok) throw new Error('Search failed');

          const data = await response.json();
          const products = data.resources?.results?.products || [];
          this.cache.set(query, products);
          this.displayResults(products);
        } catch (error) {
          console.error('Search error:', error);
          this.hideResults();
        }
      }

      showLoading() {
        this.results.classList.add('active');
        this.loading.style.display = 'block';
        this.noResults.style.display = 'none';
        this.clearProductResults();
        this.positionResults();
      }

      displayResults(products) {
        this.loading.style.display = 'none';
        this.clearProductResults();

        if (products.length === 0) {
          this.noResults.style.display = 'block';
          this.results.classList.add('active');
          this.positionResults();
          return;
        }

        this.noResults.style.display = 'none';
        products.forEach(product => {
          const resultItem = this.createResultItem(product);
          this.results.appendChild(resultItem);
        });

        this.results.classList.add('active');
        this.positionResults();
      }

      createResultItem(product) {
        const item = document.createElement('a');
        item.href = product.url;
        item.className = 'ai-search-result-item-{{ ai_gen_id }}';

        const imageHtml = product.featured_image 
          ? `<img src="${product.featured_image.url}&width=100" alt="${product.featured_image.alt || product.title}" loading="lazy">`
          : `<div style="background-color: #f4f4f4; display: flex; align-items: center; justify-content: center; color: #999; font-size: 12px; width: 100%; height: 100%;">No image</div>`;

        item.innerHTML = `
          <div class="ai-search-result-image-{{ ai_gen_id }}">
            ${imageHtml}
          </div>
          <div class="ai-search-result-info-{{ ai_gen_id }}">
            <h3 class="ai-search-result-title-{{ ai_gen_id }}">${product.title}</h3>
            <p class="ai-search-result-price-{{ ai_gen_id }}">${this.formatPrice(product.price)}</p>
          </div>
        `;

        return item;
      }

      formatPrice(price) {
        return new Intl.NumberFormat('{{ localization.language.iso_code }}', {
          style: 'currency',
          currency: '{{ cart.currency.iso_code }}',}).format(price / 100);
      }

      positionResults() {
        const rect = this.form.getBoundingClientRect();
        const viewportHeight = window.innerHeight;
        const spaceBelow = viewportHeight - rect.bottom;
        
        if (spaceBelow < 200&& rect.top > 200) {
          this.results.style.bottom = '100%';
          this.results.style.top = 'auto';
          this.results.style.borderTop = '1px solid {{ block.settings.border_color }}';this.results.style.borderBottom = 'none';
          this.results.style.borderRadius = '{{ block.settings.border_radius }}px {{ block.settings.border_radius }}px 0 0';
        } else {
          this.results.style.top = '100%';
          this.results.style.bottom = 'auto';
          this.results.style.borderTop = 'none';
          this.results.style.borderBottom = '1px solid {{ block.settings.border_color }}';
          this.results.style.borderRadius = '0 0 {{ block.settings.border_radius }}px {{ block.settings.border_radius }}px';
        }
      }

      clearProductResults() {
        const items = this.results.querySelectorAll('.ai-search-result-item-{{ ai_gen_id }}');
        items.forEach(item => item.remove());
      }

      hideResults() {
        this.results.classList.remove('active');}
    }

    customElements.define('product-search-{{ ai_gen_id }}', ProductSearch{{ ai_gen_id }});
  })();
</script>

