<script>
  (function() {
    class TacTilesCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 0;
        this.autoScrollInterval = null;
        this.isAutoScrolling = false;
        // 交互与动画状态标记，防止与自动滚动冲突
        this.isInteracting = false;
        this.isAnimating = false;
        this.autoScrollRestartTimeout = null;
      }

      connectedCallback() {
        this.track = this.querySelector('.tactiles-carousel__track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.tactiles-carousel__slide-{{ ai_gen_id }}');
        this.dotsContainer = this.querySelector('.tactiles-carousel__dots-{{ ai_gen_id }}');
        
        this.totalSlides = this.slides.length;
        this.autoScroll = this.dataset.autoScroll === 'true';
        this.autoScrollDelay = parseInt(this.dataset.autoScrollDelay) * 1000;

        this.init();
      }

      init() {
        if (this.totalSlides === 0) return;

        // 设置无缝循环
        this.setupInfiniteLoop();
        
        // 确保track有正确的transition设置
        this.track.style.transition = 'transform 0.5s ease';
        
        this.createDots();
        this.updateSlidePositions();
        this.bindEvents();
        
        if (this.autoScroll) {
          this.startAutoScroll();
        }
      }

      setupInfiniteLoop() {
        // 只在移动端且启用了carousel时设置无缝循环
        if (!this.autoScroll || window.innerWidth > 1024) return;
        
        // 克隆第一个和最后一个slide来实现无缝循环
        const firstSlide = this.slides[0].cloneNode(true);
        const lastSlide = this.slides[this.totalSlides - 1].cloneNode(true);
        
        // 添加标识符
        firstSlide.setAttribute('data-cloned', 'true');
        lastSlide.setAttribute('data-cloned', 'true');
        
        // 在track的开头添加最后一个slide的克隆
        this.track.insertBefore(lastSlide, this.track.firstChild);
        
        // 在track的末尾添加第一个slide的克隆
        this.track.appendChild(firstSlide);
        
        // 更新currentSlide以考虑前面添加的克隆slide
        this.currentSlide = 1;
        this.realCurrentSlide = 0; // 跟踪真实的slide索引
      }

      createDots() {
        if (!this.dotsContainer) return;
        
        this.dotsContainer.innerHTML = '';
        
        for (let i = 0; i < this.totalSlides; i++) {
          const dot = document.createElement('button');
          dot.className = 'tactiles-carousel__dot-{{ ai_gen_id }}';
          dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
          dot.addEventListener('click', () => {
            // 在desktop view时禁用dot点击
            if (window.innerWidth > 1024) return;
            this.goToSlide(i);
          });
          this.dotsContainer.appendChild(dot);
        }
        
        this.updateDots();
      }

      updateDots() {
        if (!this.dotsContainer) return;
        
        const dots = this.dotsContainer.querySelectorAll('.tactiles-carousel__dot-{{ ai_gen_id }}');
        
        // 如果启用了无缝循环，使用realCurrentSlide
        let dotIndex = this.realCurrentSlide !== undefined ? this.realCurrentSlide : this.currentSlide;
        
        // 确保dots索引在有效范围内
        if (dotIndex >= this.totalSlides) dotIndex = 0;
        if (dotIndex < 0) dotIndex = this.totalSlides - 1;
        
        dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === dotIndex);
        });
      }

      updateSlidePositions() {
        const slideWidth = this.getSlideWidth();
        const translateX = -this.currentSlide * slideWidth;
        this.track.style.transform = `translateX(${translateX}%)`;
        this.updateDots();
      }

      getSlideWidth() {
        const screenWidth = window.innerWidth;
        if (screenWidth <= 768) return 100;
        if (screenWidth <= 1024) return 50;
        return 33.333;
      }

      getSlidesPerView() {
        const screenWidth = window.innerWidth;
        if (screenWidth <= 768) return 1;
        if (screenWidth <= 1024) return 2;
        return 3;
      }

      getMaxSlide() {
        const slidesPerView = this.getSlidesPerView();
        return Math.max(0, this.totalSlides - slidesPerView);
      }

      goToSlide(slideIndex) {
        // 动画锁，防止连续触发造成多滑动
        if (this.isAnimating) return;
        this.isAnimating = true;

        // 如果启用了无缝循环，调整索引
        if (this.realCurrentSlide !== undefined) {
          // 先更新真实索引，确保dots立即变化
          this.realCurrentSlide = slideIndex;
          this.currentSlide = slideIndex + 1; // +1 因为前面有克隆的slide
        } else {
          const maxSlide = this.getMaxSlide();
          this.currentSlide = Math.max(0, Math.min(slideIndex, maxSlide));
        }

        this.updateSlidePositions();

        // 过渡结束后解除动画与交互锁
        setTimeout(() => {
          this.isAnimating = false;
          this.isInteracting = false;
        }, 600);

        this.resetAutoScroll();
      }

      nextSlide() {
        const maxSlide = this.getMaxSlide();
        
        // 如果启用了carousel且不在desktop view
        if (this.autoScroll && window.innerWidth <= 1024) {
          this.currentSlide++;
          
          // 更新真实的slide索引在更新位置之前，确保dots立即响应
          this.realCurrentSlide = this.currentSlide - 1;
          if (this.realCurrentSlide >= this.totalSlides) this.realCurrentSlide = 0;
          if (this.realCurrentSlide < 0) this.realCurrentSlide = this.totalSlides - 1;

          this.updateSlidePositions();
          
          // 检查是否到达了克隆的第一个slide（在末尾）
          if (this.currentSlide > this.totalSlides) {
            // 等待transition完成后，无缝跳转到真正的第一个slide
            setTimeout(() => {
              this.track.style.transition = 'none';
              this.currentSlide = 1; // 跳转到真正的第一个slide
              this.updateSlidePositions();
              
              // 重新启用transition
              setTimeout(() => {
                this.track.style.transition = 'transform 0.5s ease';
              }, 50);
            }, 500);
          }
        } else {
          // 原有逻辑，用于非carousel模式
          if (this.currentSlide >= maxSlide) {
            this.currentSlide = 0;
          } else {
            this.currentSlide++;
          }
          this.updateSlidePositions();
        }
      }

      prevSlide() {
        const maxSlide = this.getMaxSlide();
        
        // 如果启用了carousel且不在desktop view
        if (this.autoScroll && window.innerWidth <= 1024) {
          this.currentSlide--;
          
          // 更新真实的slide索引在更新位置之前，确保dots立即响应
          this.realCurrentSlide = this.currentSlide - 1;
          if (this.realCurrentSlide >= this.totalSlides) this.realCurrentSlide = 0;
          if (this.realCurrentSlide < 0) this.realCurrentSlide = this.totalSlides - 1;

          this.updateSlidePositions();
          
          // 检查是否到达了克隆的最后一个slide（在开头）
          if (this.currentSlide < 1) {
            // 等待transition完成后，无缝跳转到真正的最后一个slide
            setTimeout(() => {
              this.track.style.transition = 'none';
              this.currentSlide = this.totalSlides; // 跳转到真正的最后一个slide
              this.updateSlidePositions();
              
              // 重新启用transition
              setTimeout(() => {
                this.track.style.transition = 'transform 0.5s ease';
              }, 50);
            }, 500);
          }
        } else {
          // 原有逻辑，用于非carousel模式
          if (this.currentSlide <= 0) {
            this.currentSlide = maxSlide;
          } else {
            this.currentSlide--;
          }
          this.updateSlidePositions();
        }
      }

      startAutoScroll() {
        // 在desktop view时（能显示3个tiles）禁用carousel动画
        if (!this.autoScroll || this.totalSlides <= this.getSlidesPerView() || window.innerWidth > 1024) return;
        if (this.autoScrollInterval) return;
        if (this.isInteracting || this.isAnimating) return;
        this.isAutoScrolling = true;
        this.autoScrollInterval = setInterval(() => {
          // 避免在用户交互或动画进行中触发自动滑动
          if (this.isInteracting || this.isAnimating) return;
          this.nextSlide();
        }, this.autoScrollDelay);
      }

      stopAutoScroll() {
        if (this.autoScrollInterval) {
          clearInterval(this.autoScrollInterval);
          this.autoScrollInterval = null;
        }
        this.isAutoScrolling = false;
      }

      resetAutoScroll() {
        if (this.autoScroll) {
          this.stopAutoScroll();
          if (this.autoScrollRestartTimeout) {
            clearTimeout(this.autoScrollRestartTimeout);
            this.autoScrollRestartTimeout = null;
          }
          this.autoScrollRestartTimeout = setTimeout(() => {
            this.startAutoScroll();
          }, 1000);
        }
      }

      bindEvents() {
        window.addEventListener('resize', () => {
          this.updateSlidePositions();
        });

        this.addEventListener('mouseenter', () => {
          this.stopAutoScroll();
        });

        this.addEventListener('mouseleave', () => {
          if (this.autoScroll) {
            this.startAutoScroll();
          }
        });

        let startX = 0;
        let currentX = 0;
        let isDragging = false;

        this.track.addEventListener('touchstart', (e) => {
          // 在desktop view时禁用触摸滑动
          if (window.innerWidth > 1024) return;
          startX = e.touches[0].clientX;
          isDragging = true;
          // 标记交互并暂停自动滚动
