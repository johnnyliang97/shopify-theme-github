{% doc %}
  @prompt
    Create a responsive carousel section called "TacTiles" that showcases promotional tiles with customizable content. Each tile should:
    
    1. Display a title with optional leading and trailing text (e.g., "UP TO 40% OFF")
    2. Include a subtitle at the top (e.g., "SPEND & SAVE")
    3. Feature a main offer text (e.g., "Home", "Toys", "Beauty")
    4. Have a descriptive paragraph explaining the promotion
    5. Include a primary CTA button with customizable text and link
    6. Support an optional secondary CTA button
    7. Allow for terms and conditions text at the bottom
    8. Have customizable background and text colors
    
    The section should have:
    - A main heading at the top (e.g., "ON SALE THIS WEEK")
    - Optional navigation links above the carousel
    - Responsive behavior: showing 3 tiles on desktop, 2 on tablet, and 1 on mobile
    - Auto-scrolling functionality with navigation dots
    - Arrow navigation on larger screens
    
    Make the section fully customizable through the theme editor with appropriate settings for each element.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .tactiles-carousel-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: {{ settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    display: block;
  }

  .tactiles-carousel__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .tactiles-carousel__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 500;
    color: {{ block.settings.heading_color }};
    margin: 0 0 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .tactiles-carousel__nav-links-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 30px;
    margin-bottom: 20px;
  }

  .tactiles-carousel__nav-link-{{ ai_gen_id }} {
    color: {{ block.settings.nav_link_color }};
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: color 0.3s ease;
    border-bottom: 1px solid {{ block.settings.nav_link_color }};
    padding-bottom: 2px;
  }

  .tactiles-carousel__nav-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.nav_link_hover_color }};
    border-bottom-color: {{ block.settings.nav_link_hover_color }};
  }

  .tactiles-carousel__container-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .tactiles-carousel__track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease;
    will-change: transform;
  }

  .tactiles-carousel__slide-{{ ai_gen_id }} {
    flex: 0 0 33.333%;
    padding: 0 10px;
    box-sizing: border-box;
  }

  .tactiles-tile-{{ ai_gen_id }} {
    padding: 30px 20px;
    text-align: center;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    min-height: {{ block.settings.tile_desktop_height }}px;
    position: relative;
    overflow: hidden;
  }

  {% for i in (1..3) %}
    {% liquid
      assign tile_enabled_key = 'tile_' | append: i | append: '_enabled'
      assign tile_enabled = block.settings[tile_enabled_key]
    %}
    
    {% if tile_enabled %}
      {% liquid
        assign bg_color_key = 'tile_' | append: i | append: '_background_color'
        assign bg_image_key = 'tile_' | append: i | append: '_background_image'
        assign enable_overlay_key = 'tile_' | append: i | append: '_enable_color_overlay'
        assign overlay_color_key = 'tile_' | append: i | append: '_color_overlay'
        assign overlay_opacity_key = 'tile_' | append: i | append: '_overlay_opacity'
        
        assign bg_color = block.settings[bg_color_key]
        assign bg_image = block.settings[bg_image_key]
        assign enable_overlay = block.settings[enable_overlay_key]
        assign overlay_color = block.settings[overlay_color_key]
        assign overlay_opacity = block.settings[overlay_opacity_key]
      %}

      .tactiles-tile-{{ ai_gen_id }}[data-tile="{{ i }}"] {
        background: {{ bg_color | default: '#ffffff' }};
        {% if bg_image != blank %}
          background-image: url('{{ bg_image | image_url }}');
          background-size: cover;
          background-position: center;
          background-repeat: no-repeat;
        {% endif %}
      }

      {% if enable_overlay %}
      .tactiles-tile-{{ ai_gen_id }}[data-tile="{{ i }}"]::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: {{ overlay_color | default: '#000000' }};
        opacity: {{ overlay_opacity | default: 50 | divided_by: 100.0 }};
        z-index: 1;
      }
      {% endif %}
    {% endif %}
  {% endfor %}

  .tactiles-tile-{{ ai_gen_id }} > div {
    position: relative;
    z-index: 2;
  }

  .tactiles-tile__top-section-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    position: relative;
    z-index: 2;
  }

  .tactiles-tile__bottom-section-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    position: relative;
    z-index: 2;
    margin-top: auto;
  }



  .tactiles-tile__title-wrapper-{{ ai_gen_id }} {
    margin-bottom: 15px;
  }

  .tactiles-tile__title-leading-{{ ai_gen_id }} {
    font-size: 14px;
    font-weight: 500;
    color: {{ block.settings.tile_text_color }};
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .tactiles-tile__title-main-{{ ai_gen_id }} {
    font-size: {{ block.settings.tile_title_size }}px;
    font-weight: 500;
    color: {{ block.settings.tile_text_color }};
    margin: 5px 0;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .tactiles-tile__offer-{{ ai_gen_id }} {
    font-size: {{ block.settings.tile_offer_size }}px;
    font-weight: 600;
    color: {{ block.settings.tile_accent_color }};
    margin-bottom: 15px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .tactiles-tile__description-{{ ai_gen_id }} {
    font-size: 14px;
    line-height: 1.5;
    color: {{ block.settings.tile_text_color }};
    margin-bottom: 25px;
    opacity: 0.9;
  }

  .tactiles-tile__buttons-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-bottom: 15px;
    width: 100%;
  }

  .tactiles-tile__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 8px 16px;
    border-radius: {{ settings.btn_border_radius }}px;
    text-decoration: none;
    font-size: 14px;
    font-weight: 600;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    border: {{ settings.btn_border_width }}px solid;
    text-align: center;
  }

  .tactiles-tile__button--primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.primary_button_bg }};
    color: {{ block.settings.primary_button_text }};
    border-color: {{ block.settings.primary_button_bg }};
  }

  .tactiles-tile__button--primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.primary_button_hover_bg }};
    color: {{ block.settings.primary_button_hover_text }};
    border-color: {{ block.settings.primary_button_hover_bg }};
  }



  .tactiles-tile__terms-{{ ai_gen_id }} {
    font-size: 11px;
    color: {{ block.settings.tile_text_color }};
    opacity: 0.7;
    line-height: 1.4;
  }



  .tactiles-carousel__dots-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 30px;
  }

  .tactiles-carousel__dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: {{ block.settings.dot_color }};
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    opacity: 0.5;
  }

  .tactiles-carousel__dot-{{ ai_gen_id }}.active {
    background: {{ block.settings.dot_active_color }};
    opacity: 1;
    transform: scale(1.2);
  }

  @media screen and (min-width: 1025px) {
    .tactiles-carousel__dots-{{ ai_gen_id }} {
      display: none;
    }
  }

  @media screen and (max-width: 1024px) {
    .tactiles-carousel__slide-{{ ai_gen_id }} {
      flex: 0 0 50%;
    }

    .tactiles-carousel-{{ ai_gen_id }} {
      padding: 0 5px;
    }

    .tactiles-carousel__nav-links-{{ ai_gen_id }} {
      gap: 20px;
    }
  }

  @media screen and (max-width: 768px) {
    .tactiles-carousel__slide-{{ ai_gen_id }} {
      flex: 0 0 100%;
    }

    .tactiles-carousel__nav-links-{{ ai_gen_id }} {
      flex-wrap: wrap;
      gap: 15px;
    }

    .tactiles-tile-{{ ai_gen_id }} {
      min-height: {{ block.settings.tile_mobile_height }}px;
      padding: 25px 15px;
    }

    .tactiles-carousel__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .tactiles-tile__title-main-{{ ai_gen_id }} {
      font-size: {{ block.settings.tile_title_size | times: 0.8 }}px;
    }

    .tactiles-tile__offer-{{ ai_gen_id }} {
      font-size: {{ block.settings.tile_offer_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<tactiles-carousel-{{ ai_gen_id }}
