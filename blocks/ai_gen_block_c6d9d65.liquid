{% comment %}
  @prompt
    create a collection list slider that loops the collections automatically based on time, collection image shown as rounded on top (image size options available on desktop and mobile), collection title align centre shown on bottom,
  @request
    add a feature that user can swipe horizontally on mobile and drag to swipe on desktop
{% endcomment %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-slider-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    padding: 40px 0;
  }

  .ai-collection-slider__track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease-in-out;
    gap: {{ block.settings.gap }}px;
    cursor: grab; /* NEW: Add grab cursor for desktop */
  }

  .ai-collection-slider__track-{{ ai_gen_id }}.dragging {
    cursor: grabbing; /* NEW: Add grabbing cursor while dragging */
  }


  /* NEW: Prevent user from selecting text/images while dragging */
  .ai-collection-slider__item-{{ ai_gen_id }} {
    flex: 0 0 auto;
    width: {{ block.settings.item_width_desktop }}px;
    text-align: center;
    user-select: none;
    -webkit-user-select: none;
  }

  .ai-collection-slider__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: {{ block.settings.image_size_desktop }}px;
    height: {{ block.settings.image_size_desktop }}px;
    margin: 0 auto {{ block.settings.spacing }}px;
    border-radius: 50%;
    overflow: hidden;
    background-color: #f4f4f4;
    pointer-events: none; /* NEW: Prevent image drag ghosting */
  }

  .ai-collection-slider__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-collection-slider__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-collection-slider__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.5;
  }

  .ai-collection-slider__link-{{ ai_gen_id }} {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .ai-collection-slider__link-{{ ai_gen_id }}:hover .ai-collection-slider__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-collection-slider__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    margin: 0;
    line-height: 1.3;
  }

  .ai-collection-slider__count-{{ ai_gen_id }} {
    font-size: {{ block.settings.count_size }}px;
    color: {{ block.settings.count_color }};
    margin-top: 4px;
  }

  @media screen and (max-width: 749px) {
    .ai-collection-slider__item-{{ ai_gen_id }} {
      width: {{ block.settings.item_width_mobile }}px;
    }

    .ai-collection-slider__image-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.image_size_mobile }}px;
      height: {{ block.settings.image_size_mobile }}px;
    }

    .ai-collection-slider__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.9 }}px;
    }

    .ai-collection-slider__count-{{ ai_gen_id }} {
      font-size: {{ block.settings.count_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<collection-slider-{{ ai_gen_id }}
  class="ai-collection-slider-{{ ai_gen_id }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
  data-pause-on-hover="{{ block.settings.pause_on_hover }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-collection-slider__track-{{ ai_gen_id }}">
    {% for collection in block.settings.collections %}
      <div class="ai-collection-slider__item-{{ ai_gen_id }}">
        <a href="{{ collection.url }}" class="ai-collection-slider__link-{{ ai_gen_id }}">
          <div class="ai-collection-slider__image-wrapper-{{ ai_gen_id }}">
            {% if collection.featured_image %}
              <img
                src="{{ collection.featured_image | image_url: width: 400 }}"
                alt="{{ collection.featured_image.alt | escape }}"
                class="ai-collection-slider__image-{{ ai_gen_id }}"
                loading="lazy"
                width="400"
                height="400"
              >
            {% else %}
              <div class="ai-collection-slider__image-placeholder-{{ ai_gen_id }}">
                {{ 'collection-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
          <h3 class="ai-collection-slider__title-{{ ai_gen_id }}">{{ collection.title }}</h3>
          {% if block.settings.show_product_count %}
            <div class="ai-collection-slider__count-{{ ai_gen_id }}">
              {{ collection.products_count }}
              {% if collection.products_count == 1 %}
                product
              {% else %}
                products
              {% endif %}
            </div>
          {% endif %}
        </a>
      </div>
    {% endfor %}
