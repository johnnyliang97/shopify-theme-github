</collection-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class CollectionSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.autoplayInterval = null;
        this.isHovered = false;

        // Properties for drag/swipe functionality
        this.isDragging = false;
        this.wasDragged = false; // NEW: Better flag to distinguish click vs drag
        this.startPos = 0;
        this.currentTranslate = 0;
        this.prevTranslate = 0;
        this.animationID = 0;
        this.clickThreshold = 10;
        
        // IMPROVEMENT: Bind event handlers once for easier add/remove
        this.dragStart = this.dragStart.bind(this);
        this.drag = this.drag.bind(this);
        this.dragEnd = this.dragEnd.bind(this);
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-collection-slider__track-{{ ai_gen_id }}');
        this.items = this.querySelectorAll('.ai-collection-slider__item-{{ ai_gen_id }}');
        if (this.items.length === 0) return;

        this.autoplaySpeed = parseInt(this.dataset.autoplaySpeed) * 1000;
        this.pauseOnHover = this.dataset.pauseOnHover === 'true';

        this.totalItems = this.items.length / 2;
        this.setupAutoplay();
        this.setupHoverEvents();
        this.updateSliderPosition();
        this.setupDragEvents();

        this.track.addEventListener('transitionend', this.handleTransitionEnd.bind(this));
      }

      // IMPROVEMENT: Event listeners are now managed for a smoother desktop drag
      setupDragEvents() {
        this.track.addEventListener('mousedown', this.dragStart);
        this.track.addEventListener('touchstart', this.dragStart, { passive: true });

        // Prevent navigation on dragged links
        this.links = this.querySelectorAll('.ai-collection-slider__link-{{ ai_gen_id }}');
        this.links.forEach(link => {
            link.addEventListener('click', (e) => {
                if (this.wasDragged) {
                    e.preventDefault();
                }
            });
        });
      }

      getPositionX(event) {
        return event.type.includes('mouse') ? event.pageX : event.touches[0].clientX;
      }
      
      dragStart(event) {
        // Prevent text selection weirdness
        if (event.type === 'mousedown') {
            event.preventDefault();
        }
        
        this.stopAutoplay();
        this.isDragging = true;
        this.wasDragged = false; // Reset drag flag
        this.startPos = this.getPositionX(event);
        this.animationID = requestAnimationFrame(this.animation.bind(this));
        this.track.style.transition = 'none';
        this.track.classList.add('dragging');
        
        // IMPROVEMENT: Listen for move/end on the whole document
        document.addEventListener('mousemove', this.drag);
        document.addEventListener('touchmove', this.drag, { passive: true });
        document.addEventListener('mouseup', this.dragEnd);
        document.addEventListener('touchend', this.dragEnd);
      }

      drag(event) {
        if (this.isDragging) {
          const currentPosition = this.getPositionX(event);
          this.currentTranslate = this.prevTranslate + currentPosition - this.startPos;
          
          // If moved beyond the threshold, register it as a drag
          if (Math.abs(currentPosition - this.startPos) > this.clickThreshold) {
            this.wasDragged = true;
          }
        }
      }
      
      dragEnd() {
        if (!this.isDragging) return;
        this.isDragging = false;
        
        // IMPROVEMENT: Remove document listeners
        document.removeEventListener('mousemove', this.drag);
        document.removeEventListener('touchmove', this.drag);
        document.removeEventListener('mouseup', this.dragEnd);
        document.removeEventListener('touchend', this.dragEnd);

        cancelAnimationFrame(this.animationID);
        const movedBy = this.currentTranslate - this.prevTranslate;

        if (movedBy < -50) {
          this.nextSlide();
        } else if (movedBy > 50) {
          this.prevSlide();
        } else {
          this.track.style.transition = 'transform 0.5s ease-in-out';
          this.updateSliderPosition();
        }

        this.track.classList.remove('dragging');
        if (!this.isHovered) {
          this.startAutoplay();
        }
      }
      
      animation() {
        this.track.style.transform = `translateX(${this.currentTranslate}px)`;
        if (this.isDragging) requestAnimationFrame(this.animation.bind(this));
      }

      setupAutoplay() {
        if (this.autoplaySpeed > 0) {
          this.startAutoplay();
        }
      }

      startAutoplay() {
        this.stopAutoplay();
        if (this.autoplaySpeed > 0) {
          this.autoplayInterval = setInterval(() => {
            if (!this.isHovered || !this.pauseOnHover) {
              this.nextSlide();
            }
          }, this.autoplaySpeed);
        }
      }

      stopAutoplay() {
        clearInterval(this.autoplayInterval);
        this.autoplayInterval = null;
      }

      setupHoverEvents() {
        if (this.pauseOnHover) {
          this.addEventListener('mouseenter', () => {
            this.isHovered = true;
            this.stopAutoplay();
          });

          this.addEventListener('mouseleave', () => {
            this.isHovered = false;
            if(!this.isDragging) {
              this.startAutoplay();
            }
          });
        }
      }
      
      prevSlide() {
        this.currentIndex--;
        this.track.style.transition = 'transform 0.5s ease-in-out';
        this.updateSliderPosition();
      }

      nextSlide() {
        this.currentIndex++;
        this.track.style.transition = 'transform 0.5s ease-in-out';
        this.updateSliderPosition();
      }
      
      handleTransitionEnd() {
        if (this.currentIndex >= this.totalItems) {
            this.track.style.transition = 'none';
            this.currentIndex = this.currentIndex % this.totalItems;
            this.updateSliderPosition();
        } else if (this.currentIndex < 0) {
            this.track.style.transition = 'none';
            this.currentIndex = this.currentIndex + this.totalItems;
            this.updateSliderPosition();
        }
      }

      updateSliderPosition() {
        if (this.items.length > 0) {
          const itemWidth = this.items[0].offsetWidth;
          const gap = parseInt(getComputedStyle(this.track).gap) || 0;
          const translateX = -(this.currentIndex * (itemWidth + gap));
          this.track.style.transform = `translateX(${translateX}px)`;
          
          this.prevTranslate = translateX;
          this.currentTranslate = translateX;
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('collection-slider-{{ ai_gen_id }}', CollectionSlider{{ ai_gen_id }});
  })();
</script>

