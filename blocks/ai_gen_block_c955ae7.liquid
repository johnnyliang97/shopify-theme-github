      padding-right: 10px;
    }
  }
{% endstyle %}

<mega-banner-{{ ai_gen_id }}
  class="ai-mega-banner-{{ ai_gen_id }}"
  data-interval="{{ block.settings.slide_interval }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-mega-banner-image-container-{{ ai_gen_id }}">
    {% if block.settings.image_1_desktop or block.settings.image_2_desktop %}
      {% if block.settings.image_1_desktop %}
        <img
          src="{{ block.settings.image_1_desktop | image_url: width: 2000 }}"
          alt="{{ block.settings.image_1_desktop.alt | escape }}"
          class="ai-mega-banner-image-{{ ai_gen_id }} desktop active"
          loading="lazy"
          width="{{ block.settings.image_1_desktop.width }}"
          height="{{ block.settings.image_1_desktop.height }}"
          data-slide="0"
        >
      {% endif %}

      {% if block.settings.image_2_desktop %}
        <img
          src="{{ block.settings.image_2_desktop | image_url: width: 2000 }}"
          alt="{{ block.settings.image_2_desktop.alt | escape }}"
          class="ai-mega-banner-image-{{ ai_gen_id }} desktop"
          loading="lazy"
          width="{{ block.settings.image_2_desktop.width }}"
          height="{{ block.settings.image_2_desktop.height }}"
          data-slide="1"
        >
      {% endif %}

      {% if block.settings.image_1_mobile %}
        <img
          src="{{ block.settings.image_1_mobile | image_url: width: 800 }}"
          alt="{{ block.settings.image_1_mobile.alt | escape }}"
          class="ai-mega-banner-image-{{ ai_gen_id }} mobile active"
          loading="lazy"
          width="{{ block.settings.image_1_mobile.width }}"
          height="{{ block.settings.image_1_mobile.height }}"
          data-slide="0"
        >
      {% endif %}

      {% if block.settings.image_2_mobile %}
        <img
          src="{{ block.settings.image_2_mobile | image_url: width: 800 }}"
          alt="{{ block.settings.image_2_mobile.alt | escape }}"
          class="ai-mega-banner-image-{{ ai_gen_id }} mobile"
          loading="lazy"
          width="{{ block.settings.image_2_mobile.width }}"
          height="{{ block.settings.image_2_mobile.height }}"
          data-slide="1"
        >
      {% endif %}
    {% else %}
      <div class="ai-mega-banner-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
        <div class="ai-mega-banner-empty-state-{{ ai_gen_id }}">
          Add your banner images to get started
        </div>
      </div>
    {% endif %}
  </div>

  {% if block.settings.show_overlay %}
    <div class="ai-mega-banner-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-mega-banner-content-{{ ai_gen_id }}">
    {% if block.settings.subheader != blank %}
      <div class="ai-mega-banner-subheader-{{ ai_gen_id }}">
        {{ block.settings.subheader }}
      </div>
    {% endif %}

    {% if block.settings.header != blank %}
      <h1 class="ai-mega-banner-header-{{ ai_gen_id }}">
        {{ block.settings.header }}
      </h1>
    {% endif %}

    {% if block.settings.text != blank %}
      <div class="ai-mega-banner-text-{{ ai_gen_id }}">
        {{ block.settings.text }}
      </div>
    {% endif %}

    <div class="ai-mega-banner-buttons-{{ ai_gen_id }}">
      {% if block.settings.button_1_text != blank %}
        <a
          href="{{ block.settings.button_1_link }}"
          class="ai-mega-banner-button-{{ ai_gen_id }} ai-mega-banner-button-{{ ai_gen_id }}--primary"
        >
          {{ block.settings.button_1_text }}
        </a>
      {% endif %}

      {% if block.settings.button_2_text != blank %}
        <a
          href="{{ block.settings.button_2_link }}"
          class="ai-mega-banner-button-{{ ai_gen_id }} ai-mega-banner-button-{{ ai_gen_id }}--secondary"
        >
          {{ block.settings.button_2_text }}
        </a>
      {% endif %}

      {% if block.settings.button_3_text != blank %}
        <a
          href="{{ block.settings.button_3_link }}"
          class="ai-mega-banner-button-{{ ai_gen_id }} ai-mega-banner-button-{{ ai_gen_id }}--tertiary"
        >
          {{ block.settings.button_3_text }}
        </a>
      {% endif %}
    </div>
  </div>
</mega-banner-{{ ai_gen_id }}>

<script>
  (function() {
    class MegaBanner{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 2;
        this.interval = null;
      }

      connectedCallback() {
        this.intervalTime = parseInt(this.dataset.interval) * 1000;
        this.images = this.querySelectorAll('.ai-mega-banner-image-{{ ai_gen_id }}');
        
        if (this.images.length > 1) {
          this.startSlideshow();
        }
      }

      disconnectedCallback() {
        if (this.interval) {
          clearInterval(this.interval);
        }
      }

      startSlideshow() {
        this.interval = setInterval(() => {
          this.nextSlide();
        }, this.intervalTime);
      }

      nextSlide() {
        this.images.forEach(img => {
          if (parseInt(img.dataset.slide) === this.currentSlide) {
            img.classList.remove('active');
          }
        });

        this.currentSlide = (this.currentSlide + 1) % this.totalSlides;

        this.images.forEach(img => {
          if (parseInt(img.dataset.slide) === this.currentSlide) {
            img.classList.add('active');
          }
        });
      }
    }

    customElements.define('mega-banner-{{ ai_gen_id }}', MegaBanner{{ ai_gen_id }});
  })();
</script>

