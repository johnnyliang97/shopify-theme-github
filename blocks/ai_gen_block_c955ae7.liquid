{% doc %}
  @prompt
    a mega image banner with time based animated image gallery in fade, no pagination or controls needed.
    2 images in total, each image has desktop and mobile options.
    only 1 set of text overlay on the banner, including subheader, header, text, aligning in centre both horizontally and vertically. 
    
    below the text are 3 buttons. display in 1 same row on desktop, stack on mobile.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-mega-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.banner_height_desktop }}px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-mega-banner-image-container-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-mega-banner-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0;
    transition: opacity {{ block.settings.fade_duration }}s ease-in-out;
  }

  .ai-mega-banner-image-{{ ai_gen_id }}.active {
    opacity: 1;
  }

  .ai-mega-banner-image-{{ ai_gen_id }}.mobile {
    display: none;
  }

  .ai-mega-banner-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-mega-banner-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: center;
    color: {{ block.settings.text_color }};
    max-width: {{ block.settings.content_max_width }}px;
    padding: 0 20px;
  }

  .ai-mega-banner-subheader-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheader_size }}px;
    margin-bottom: {{ block.settings.subheader_margin }}px;
    font-weight: 400;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .ai-mega-banner-header-{{ ai_gen_id }} {
    font-size: {{ block.settings.header_size }}px;
    font-weight: {{ block.settings.header_weight }};
    margin-bottom: {{ block.settings.header_margin }}px;
    line-height: 1.2;
    color: #ffffff;
  }

  .ai-mega-banner-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin-bottom: {{ block.settings.text_margin }}px;
  }

  .ai-mega-banner-buttons-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.button_gap }}px;
    justify-content: center;
    align-items: center;
  }

  .ai-mega-banner-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    min-width: 140px;
    border: none;
  }

  .ai-mega-banner-button-{{ ai_gen_id }}--primary {
    background-color: {{ block.settings.button_primary_bg }};
    color: {{ block.settings.button_primary_text }};
  }

  .ai-mega-banner-button-{{ ai_gen_id }}--primary:hover {
    background-color: {{ block.settings.button_primary_hover_bg }};
    color: {{ block.settings.button_primary_hover_text }};
  }

  .ai-mega-banner-button-{{ ai_gen_id }}--secondary {
    background-color: {{ block.settings.button_secondary_bg }};
    color: {{ block.settings.button_secondary_text }};
  }

  .ai-mega-banner-button-{{ ai_gen_id }}--secondary:hover {
    background-color: {{ block.settings.button_secondary_hover_bg }};
    color: {{ block.settings.button_secondary_hover_text }};
  }

  .ai-mega-banner-button-{{ ai_gen_id }}--tertiary {
    background-color: {{ block.settings.button_tertiary_bg }};
    color: {{ block.settings.button_tertiary_text }};
  }

  .ai-mega-banner-button-{{ ai_gen_id }}--tertiary:hover {
    background-color: {{ block.settings.button_tertiary_hover_bg }};
    color: {{ block.settings.button_tertiary_hover_text }};
  }

  .ai-mega-banner-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-mega-banner-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
    opacity: 0.3;
  }

  .ai-mega-banner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 8px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

